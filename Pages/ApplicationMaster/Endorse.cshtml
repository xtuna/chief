@page "{id:int}"
@model chief.Pages.ApplicationMaster.EndorseModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Endorse Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card-header-custom {
            background-color: #007bff;
            color: white;
            font-size: 1.25rem;
            text-align: center;
        }

        .file-label {
            margin-top: 1rem;
            font-weight: bold;
        }

        .custom-file {
            margin-top: 1rem;
        }

        .file-info {
            margin-top: 1rem;
            font-size: 0.9rem;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Form for File Upload -->
        <form asp-controller="Application" asp-action="Endorse" enctype="multipart/form-data" method="post">
            <input type="hidden" name="ApplicationId" value="@Model.ApplicationId" />
            <div class="row mb-3">
                <label for="fileUpload" class="col-sm-2 col-form-label">Upload File</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="fileUpload" name="uploadedFile" required />
                    <small class="text-muted">Please upload the endorsement document (PDF, DOCX).</small>
                </div>
            </div>

            <!-- File name display after selection -->
            <div class="row mb-3">
                <label for="fileName" class="col-sm-2 col-form-label">Selected File</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="fileName" readonly />
                </div>
            </div>

            <!-- Additional fields for other endorsements or remarks -->
            <div class="row mb-3">
                <label for="remarks" class="col-sm-2 col-form-label">Remarks</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="remarks" name="remarks" rows="4" placeholder="Add any remarks or comments here."></textarea>
                </div>
            </div>

            <!-- Submit button -->
            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Submit Endorsement</button>
                </div>
            </div>
        </form>
    </div>

    <!-- JavaScript to update the file name dynamically -->
    <script>
        document.getElementById('fileUpload').addEventListener('change', function () {
            var fileName = this.files[0].name;
            document.getElementById('fileName').value = fileName;
        });
    </script>

    <!-- Add Bootstrap for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // JavaScript to display selected file name
        function showFileName() {
            var fileInput = document.getElementById('fileUpload');
            var fileNameDisplay = document.getElementById('fileNameDisplay');
            var fileName = fileInput.files[0].name;
            fileNameDisplay.innerHTML = "Selected file: " + fileName;
        }
    </script>
</body>
</html>