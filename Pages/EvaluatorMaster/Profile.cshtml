@page
@model chief.Pages.EvaluatorMaster.ProfileModel
@{
    ViewData["Title"] = "Evaluator Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f9f9f9;
        }

        .container {
            width: 100%;
            margin: 0 auto;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #d9d9d9;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .header .profile-info {
                display: flex;
                align-items: center;
            }

            .header img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                margin-right: 20px;
            }

            .header h2 {
                font-size: 24px;
                margin: 0;
                color: #000;
            }

            .header p {
                margin: 5px 0;
            }

            .header .stats {
                display: flex;
                gap: 20px;
            }

        .stat-box {
            text-align: center;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 150px;
        }

            .stat-box.pending {
                background-color: #f7c63b;
            }

            .stat-box.evaluated {
                background-color: #28a745;
                color: white;
            }

            .stat-box.missed {
                background-color: #dc3545;
                color: white;
            }

            .stat-box h3 {
                font-size: 2em;
                margin: 0;
            }

            .stat-box p {
                margin: 5px 0;
            }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 16px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #7B0000;
            color: white;
        }

        .back-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #7B0000;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Profile Header Section -->
        <div class="header">
            <div class="profile-info">
                <!-- Placeholder image -->
                <img src="https://via.placeholder.com/100" alt="Evaluator Profile Picture">
                <div>
                    <h2>@Model.Evaluator.Name</h2>
                    <p><strong>Email:</strong> @Model.Evaluator.Email</p>
                    <p><strong>Specialization:</strong> @Model.Evaluator.Specialization</p>
                    <p><strong>Type:</strong> @Model.Evaluator.Type</p>
                    <p><strong>Status:</strong> @Model.Evaluator.Status</p>
                </div>
            </div>
            <!-- Statistics Section -->
            <div class="stats">
                <div class="stat-box pending">
                    <h3>@Model.PendingRequests</h3>
                    <p>TOTAL</p>
                    <p>Pending Application Requests</p>
                </div>
                <div class="stat-box evaluated">
                    <h3>@Model.EvaluatedRequests</h3>
                    <p>TOTAL</p>
                    <p>Evaluated Application Requests</p>
                </div>
                <div class="stat-box missed">
                    <h3>@Model.MissedRequests</h3>
                    <p>TOTAL</p>
                    <p>Missed Application Requests</p>
                </div>
            </div>
        </div>

        <!-- Document Table Section -->
        <table>
            <thead>
                <tr>
                    <th>DTS No.</th>
                    <th>Document Title</th>
                    <th>Application Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var document in Model.EvaluatorDocuments)
                {
                    <tr>
                        <td>@document.DTSNumber</td>
                        <td>@document.Title</td>
                        <td>@document.ApplicationType</td>
                        <td>
                            <button type="button" onclick="viewDocument(@document.Id)">View</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Back Button -->
        <a href="/EvaluatorMaster/Index" class="back-btn">Back</a>
    </div>
    <script>
            function viewDocument(documentId) {
            // Redirect or display document details
            alert(`Viewing document with ID ${documentId}`);
        }
    </script>
</body>
</html>
