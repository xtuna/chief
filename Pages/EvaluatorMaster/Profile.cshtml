@page "{id:int?}"
@model chief.Pages.EvaluatorMaster.ProfileModel
@{
    ViewData["Title"] = "Evaluator Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Evaluator Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #7B0000;
            padding: 10px 20px;
            color: white;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .header a {
                color: white;
                text-decoration: none;
                font-weight: bold;
            }

        h1 {
            font-size: 1.5rem;
            margin: 20px 0 10px 20px;
            font-weight: bold;
        }

        h2 {
            font-size: 1.2rem;
            margin-left: 20px;
            color: #6c757d;
        }

        .profile-container {
            margin: 20px;
            padding: 20px;
            background-color: #D9D9D9;
            border-radius: 10px;
            display: flex;
            align-items: center;
        }

        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: white;
            border: 2px solid #ccc;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            color: #7B0000;
        }

        .profile-info {
            margin-left: 20px;
        }

            .profile-info h3 {
                font-size: 1.5rem;
                font-weight: bold;
                margin: 0;
            }

            .profile-info p {
                font-size: 1rem;
                margin: 5px 0;
                color: #333;
            }

        .stats-container {
            display: flex;
            justify-content: space-around;
            margin: 20px;
        }

        .stat-box {
            width: 150px;
            background-color: #fff;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .stat-box h3 {
                margin: 0;
                font-size: 2rem;
                color: #7B0000;
            }

            .stat-box p {
                margin: 5px 0 0;
                font-size: 1rem;
                color: #6c757d;
            }

        .pending {
            border-top: 6px solid #ffc107;
        }

        .evaluated {
            border-top: 6px solid #28a745;
        }

        .missed {
            border-top: 6px solid #dc3545;
        }

        .table-container {
            margin: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: 10px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #7B0000;
            color: white;
        }

        td {
            background-color: #f9f9f9;
            color: #333;
        }

        .back-btn {
            background-color: #7B0000;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            display: inline-block;
            margin: 20px;
            text-decoration: none;
        }

            .back-btn:hover {
                background-color: #5A0000;
            }
    </style>
</head>
<body>
    <div class="header">
        <span>Evaluator Profile</span>
        <a href="/EvaluatorMaster/Index" class="back-btn">Back</a>
    </div>

    <h1>Evaluators</h1>
    <h2>Internal Evaluator</h2>

    <div class="profile-container">
        <div class="profile-image">
            <i class="fa fa-user"></i>
        </div>
        <div class="profile-info">
            <h3>Evaluator's Name</h3>
            <p>Specialization</p>
            <p>Evaluator ID: @Model.Evaluator.Id</p>
        </div>
    </div>

    <div class="stats-container">
        <div class="stat-box pending">
            <h3>50</h3>
            <p>Pending Application Requests</p>
        </div>
        <div class="stat-box evaluated">
            <h3>45</h3>
            <p>Evaluated Application Requests</p>
        </div>
        <div class="stat-box missed">
            <h3>5</h3>
            <p>Missed Application Requests</p>
        </div>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>DTS No.</th>
                    <th>Document Title</th>
                    <th>Application Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row, replace with dynamic data -->
                <tr>
                    <td>123456</td>
                    <td>Research Proposal A</td>
                    <td>Research Paper</td>
                    <td>
                        <!-- Add action buttons or links here -->
                    </td>
                </tr>
                <!-- Add more rows dynamically based on the evaluator's data -->
            </tbody>
        </table>
    </div>
</body>
</html>