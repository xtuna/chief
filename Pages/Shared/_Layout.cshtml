<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Research Management Office</title>

    <!-- Bootstrap and custom styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Custom styling to match the design */
        .navbar {
            background-color: rgba(133, 0, 0, 1); /* Dark red */
            padding: 0.5rem 1rem;
            z-index: 1050; /* Ensure navbar is above the sidebar */
        }

        /* Always visible hamburger menu */
        .navbar-toggler {
            position: relative;
            display: inline-block;
            margin-right: 1rem;
            z-index: 1100; /* Ensure it appears above the navbar content */
        }

        .navbar-brand div span {
            font-size: 18px;
            font-weight: bold;
            color: white;
        }

        .navbar-brand div small {
            font-size: 12px;
            color: white;
        }

        .navbar-nav .nav-link {
            color: white;
            font-weight: bold;
            padding: 0.75rem 1rem;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                background-color: rgba(204, 0, 0, 1); /* Red background on hover and active */
                border-radius: 8px;
                color: white; /* Ensure the text stays white */
            }

        .bell-icon, .fas {
            color: white;
            font-size: 18px;
        }

        .btn-light {
            background-color: white;
            color: #5B0404;
            font-weight: bold;
            border-radius: 8px;
            padding: 0.5rem 1rem;
        }

            .btn-light:hover {
                background-color: #e0a800;
            }

        /* Updated Chief Dropdown: Outlined in white only */
        .dropdown-toggle {
            border: 2px solid white;
            color: white;
            font-weight: bold;
            background-color: transparent; /* Transparent background */
            border-radius: 8px;
            padding: 0.5rem 1rem;
        }

        .dropdown-menu .dropdown-item:hover {
            background-color: #ffc107;
        }

        footer {
            background-color: #5B0404;
            padding: 1rem;
            color: white;
        }

        /* Adjust the logo size and position */
        .navbar-brand img {
            margin-right: 8px;
            width: 45px;
            height: 45px;
        }

        /* Align icons and buttons with spacing */
        .btn-link {
            color: white;
            font-size: 18px;
        }

        /* Align bell and profile icons properly */
        .user-controls {
            display: flex;
            align-items: center;
        }

            .user-controls .btn {
                margin-left: 1rem;
            }
        /* Sidebar Styling */
        #sidebar {
            position: fixed;
            left: 0;
            top: 56px; /* Place the sidebar below the navbar */
            height: calc(100% - 56px); /* Adjust height to fit below navbar */
            width: 250px;
            background-color: rgba(124, 11, 11, 0.9); /* Slightly lighter red with opacity */
            padding: 1rem;
            display: none; /* Hidden by default */
            transition: all 0.3s;
            z-index: 1000;
        }

            #sidebar.active {
                display: block;
            }

            /* Sidebar User Info */
            #sidebar .user-info {
                text-align: center;
                margin-bottom: 2rem;
            }

                #sidebar .user-info img {
                    width: 80px;
                    height: 80px;
                    border-radius: 50%;
                }

                #sidebar .user-info .user-name {
                    font-size: 18px;
                    font-weight: bold;
                    color: white;
                    margin-top: 10px;
                }

                #sidebar .user-info .user-webmail,
                #sidebar .user-info .user-id {
                    color: white;
                    font-size: 12px;
                }

            /* Sidebar Navigation Items */
            #sidebar ul {
                list-style-type: none;
                padding-left: 0;
            }

                #sidebar ul li {
                    margin-bottom: 1.5rem;
                }

                    #sidebar ul li a {
                        color: white;
                        font-size: 16px;
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                    }

                        #sidebar ul li a i {
                            margin-right: 10px;
                        }

            /* Log out button */
            #sidebar .logout {
                position: absolute;
                bottom: 20px;
                left: 20px;
            }

                #sidebar .logout a {
                    color: white;
                    text-decoration: none;
                    font-size: 16px;
                }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- Hamburger Menu always visible on the left side of the logo -->
                <button class="navbar-toggler" type="button" id="hamburgerButton">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Logo and Branding -->
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="https://i.ibb.co/YDXyVPq/pup-logo.png" alt="Logo" />
                    <div class="ms-2">
                        <span>Research Management Office</span><br />
                        <small>Polytechnic University of the Philippines</small>
                    </div>
                </a>

                <!-- Collapsible content for navigation links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-3">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="ApplicationMaster">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Evaluator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Checklists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Notify</a>
                        </li>
                    </ul>

                    <!-- User Controls with Chief, Bell, and Profile icons -->
                    <div class="user-controls ms-auto">
                        <!-- Researcher Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-light dropdown-toggle" type="button" id="researcherDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Chief
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="researcherDropdown">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Logout</a></li>
                            </ul>
                        </div>

                        <!-- Notification Icon -->
                        <button class="btn btn-link text-white ms-3">
                            <i class="fas fa-bell"></i>
                        </button>

                        <!-- User Icon -->
                        <button class="btn btn-link text-white ms-3">
                            <i class="fas fa-user"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div id="sidebar">
        <div class="user-info">
            <img src="https://i.ibb.co/ZmGxVR9/default-profile.png" alt="User Profile">
            <div class="user-name">User Name</div>
            <div class="user-webmail">User Webmail</div>
            <div class="user-id">User ID</div>
        </div>
        <ul>
            <li><a href="#"><i class="fas fa-question-circle"></i> FAQs</a></li>
            <li><a href="#"><i class="fas fa-star"></i> Rate Us</a></li>
            <li><a href="#"><i class="fas fa-chart-line"></i> Report</a></li>
            <li><a href="#"><i class="fas fa-info-circle"></i> About</a></li>
        </ul>
        <div class="logout">
            <a href="#"><i class="fas fa-sign-out-alt"></i> Log Out</a>
        </div>
    </div>

    <!-- This is where the view content will be rendered -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <footer class="text-white text-center">
        <p>&copy; 2024 Research Management Office</p>
    </footer>

    <!-- Bootstrap JS and Font Awesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        // Toggle Sidebar when hamburger is clicked
        const hamburgerButton = document.getElementById('hamburgerButton');
        const sidebar = document.getElementById('sidebar');

        hamburgerButton.addEventListener('click', function () {
            sidebar.classList.toggle('active');
        });
    </script>
</body>
</html>
