@page
@model chief.Pages.NotifyMaster.IndexModel

@{
    ViewData["Title"] = "Push Notification";
}

<h1>Push Notifications</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notify[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notify[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notify[0].Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notify[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notify[0].DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notify) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
