@model chief.Pages.ChecklistMaster.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Checklist</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Checklist.DocumentName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Checklist.DocumentName)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Checklist.ApplicationType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Checklist.ApplicationType)
    </dd>

    <dt class="col-sm-2">
        Checklist Items
    </dt>
    <dd class="col-sm-10">
        <ul>
            @foreach (var item in Model.Checklist.ChecklistItems)
            {
                <li>@item</li>
            }
        </ul>
    </dd>
</dl>

