@page
@model chief.Pages.ChecklistMaster.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Checklist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Checklist.DocumentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Checklist.DocumentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Checklist.ApplicationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Checklist.ApplicationType)
        </dd>
        <dt class="col-sm-2">Checklist Items</dt>
        <dd class="col-sm-10">
            <ul>
                @if (Model.Checklist.ChecklistItems != null && Model.Checklist.ChecklistItems.Any())
                {
                    foreach (var item in Model.Checklist.ChecklistItems)
                    {
                        <li>@Html.DisplayFor(m => item.ItemName)</li>
                    }
                }
                else
                {
                    <li>No checklist items added.</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Checklist.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
