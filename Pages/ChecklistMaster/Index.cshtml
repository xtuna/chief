@page
@model chief.Pages.ChecklistMaster.IndexModel

@{
    ViewData["Title"] = "Checklist";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #000;
        text-align: left;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .tab-container {
        display: flex;
        justify-content: flex-start;
        margin-bottom: 20px;
    }

    .tab {
        padding: 10px 20px;
        font-weight: bold;
        cursor: pointer;
        background-color: #f1f1f1;
        border: none;
        outline: none;
        transition: background-color 0.3s ease;
    }

        .tab.active {
            background-color: #7B0000;
            color: white;
        }

    .button-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 10px;
    }

    .add-checklist-btn {
        background-color: #7B0000;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
    }

    .add-checklist-btn:hover {
        background-color: #5a0000;
    }

    .add-checklist-btn .icon {
        background-color: white;
        color: #7B0000;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 8px;
        font-size: 14px;
        font-weight: bold;
    }

    .filter-btn {
        background-color: transparent;
        border: none;
        cursor: pointer;
        font-size: 18px;
        color: #000;
        margin-left: 10px;
    }

    .filter-btn:hover {
        color: #5a0000;
    }

    .table-container {
        background-color: #D9D9D9;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #D9D9D9;
        border-radius: 8px;
        overflow: hidden;
    }

    thead {
        background-color: #7B0000;
        color: white;
        text-align: center;
        font-weight: bold;
    }

    th, td {
        padding: 16px;
        text-align: left;
        font-size: 14px;
        border-bottom: 1px solid #ddd;
    }

    /*th {
        text-align: center;
    }*/
    tbody tr:nth-child(even) {
        background-color: #f4f4f4;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    .assign-btn {
        padding: 8px 16px;
        background-color: #ffc107;
        color: black;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .assign-btn:hover {
            background-color: #e0a800;
        }

    .days-dropdown {
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .status-btn {
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        cursor: default;
        color: white;
    }

        .status-btn.pending {
            background-color: gray;
        }

        .status-btn.approved {
            background-color: green;
        }

        .status-btn.rejected {
            background-color: red;
        }

        .status-btn.unknown {
            background-color: darkgray;
        }

    .icon-eye {
        font-size: 20px;
        cursor: pointer;
    }

    .actions-column a {
        color: #7B0000;
        font-weight: bold;
        text-decoration: none;
        padding-right: 10px;
    }

        .actions-column a:hover {
            text-decoration: underline;
        }
    tbody tr:hover {
        background-color: #f1f1f1;
    }

    .actions-column {
        text-align: center;
    }

    .action-icon {
        cursor: pointer;
        margin: 0 5px;
        font-size: 18px;
        color: #7B0000;
    }

    .action-icon:hover {
        color: #5a0000;
    }

    .icon-black {
        color: black;
    }
</style>
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1 style="margin: 0;">Checklist</h1>
    <div style="display: flex; align-items: center;">
        <button class="add-checklist-btn" onclick="location.href='@Url.Page("Create")'">
            <span class="icon">+</span>Add Checklist
        </button>
        <button class="filter-btn" style="margin-right: 10px;">&#128269;</button>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Document Name</th>
            <th>Application Type</th>
            <th>Checklist Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Checklist)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DocumentName)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationType)</td>
                <td>
                    <ul>
                        @foreach (var checklistItem in item.ChecklistItems)
                        {
                            <li>@Html.DisplayFor(m => checklistItem.ItemName)</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" title="Edit">
                        <i class="fas fa-edit icon-black"></i>
                    </a>
                    |
                    <a asp-page="./Delete" asp-route-id="@item.Id" title="Delete" onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="fas fa-trash-alt icon-black"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>